<div id="mainBettingSection" class="container">
    <h3>Place Your Bet</h3>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#manualBetTab">Manual</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#autoBetTab">Auto</a>
        </li>
    </ul>

    <div class="tab-content">
        <div id="manualBetTab" class="tab-pane fade show active">
            <form id="betForm">
                <div class="form-group">
                    <label for="betAmount">Bet Amount</label>
                    <input type="number" class="form-control" id="betAmount" name="betAmount" required>
                </div>
                <div class="form-group">
                    <label for="rollTarget">Roll Over Target</label>
                    <input type="number" class="form-control" id="rollTarget" name="rollTarget" min="1" max="100" required>
                </div>
                <div class="form-group">
                    <label for="multiplier">Multiplier</label>
                    <input type="number" class="form-control" id="multiplier" name="multiplier" step="0.1" required>
                </div>
                <div class="form-group">
                    <label for="winChance">Win Chance (%)</label>
                    <input type="number" class="form-control" id="winChance" name="winChance" min="0" max="100" step="0.1" required>
                </div>
                <div class="bet-buttons">
                    <button type="button" class="btn btn-secondary" onclick="setBetAmount('half')">Â½</button>
                    <button type="button" class="btn btn-secondary" onclick="setBetAmount('double')">2x</button>
                </div>
                <button type="submit" class="btn btn-primary">Roll the Dice</button>
            </form>
            <div id="betResult"></div>
        </div>
        <div id="autoBetTab" class="tab-pane fade">
            <h4>Auto Betting</h4>
            <form id="autoBetForm">
                <div class="form-group">
                    <label for="stopLimit">Stop Limit</label>
                    <input type="number" class="form-control" id="stopLimit" required>
                </div>
                <div class="form-group">
                    <label for="numberOfRolls">Number of Rolls</label>
                    <input type="number" class="form-control" id="numberOfRolls" required>
                </div>
                <button type="submit" class="btn btn-primary">Start Auto Bet</button>
            </form>
            <div id="autoBetStatus"></div>
        </div>
    </div>
</div>
<script src="/js/setBetAmount.js"></script>
<script src="/js/autoBet.js"></script>