<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/_head.ejs') %>
    <link rel="stylesheet" href="/css/adminSidebar.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <title>Admin Dashboard - 24Matters</title>
    <script src="/js/adminSidebarToggle.js" defer></script>
    <script src="/js/mobileSidebarToggle.js" defer></script>
</head>
<body>
    <%- include ('../partials/adminHeader.ejs') %>
    <button class="btn btn-primary d-md-none" type="button" id="sidebarToggle">Toggle Sidebar</button>
    <div class="d-flex" style="height: 100vh;">
        <div class="nav flex-column nav-pills me-3 sidebar" id="v-pills-tab" role="tablist" aria-orientation="vertical" style="width: 250px; background-color: #f8f9fa;">
            <a class="nav-link active" id="v-pills-home-tab" data-bs-toggle="pill" href="/admin/users" role="tab" aria-controls="v-pills-home" aria-selected="true"><i class="fas fa-users"></i> User Management</a>
            <a class="nav-link" id="v-pills-profile-tab" data-bs-toggle="pill" href="/admin/purchases" role="tab" aria-controls="v-pills-profile" aria-selected="false"><i class="fas fa-shopping-cart"></i> Purchase Management</a>
            <a class="nav-link" id="v-pills-messages-tab" data-bs-toggle="pill" href="/admin/announcements" role="tab" aria-controls="v-pills-messages" aria-selected="false"><i class="fas fa-bullhorn"></i> Announcements</a>
            <a class="nav-link" id="v-pills-settings-tab" data-bs-toggle="pill" href="/admin/tasks" role="tab" aria-controls="v-pills-settings" aria-selected="false"><i class="fas fa-tasks"></i> Task Management</a>
            <a class="nav-link" id="v-pills-reports-tab" data-bs-toggle="pill" href="/admin/reports" role="tab" aria-controls="v-pills-reports" aria-selected="false"><i class="fas fa-chart-line"></i> Reports</a>
        </div>
        <div class="tab-content" id="v-pills-tabContent">
            <!-- Content will be loaded here based on the active tab -->
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggleButton = document.getElementById('sidebarToggle');
            const sidebar = document.querySelector('.sidebar');
            toggleButton.addEventListener('click', function () {
                const isOpen = sidebar.getAttribute('data-sidebar-status') === 'open';
                if (isOpen) {
                    sidebar.style.width = '0';
                    sidebar.setAttribute('data-sidebar-status', 'closed');
                } else {
                    sidebar.style.width = '250px';
                    sidebar.setAttribute('data-sidebar-status', 'open');
                }
            });
        });
    </script>
</body>
</html>